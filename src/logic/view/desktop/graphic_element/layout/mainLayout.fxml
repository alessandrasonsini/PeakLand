   <children>
      <BorderPane style="-fx-background-color: #CCE3C9 #CCE3C9;" VBox.vgrow="NEVER">
         <left>
            <ImageView fitHeight="212.0" fitWidth="494.0" pickOnBounds="true" preserveRatio="true" BorderPane.alignment="CENTER">
               <image>
                  <Image url="@../images/montagna_2.png" />
               </image>
               <BorderPane.margin>
                  <Insets left="10.0" top="5.0" />
               </BorderPane.margin>
            </ImageView>
         </left>
         <right>
            <ImageView fitHeight="212.0" fitWidth="494.0" pickOnBounds="true" preserveRatio="true" BorderPane.alignment="CENTER">
               <image>
                  <Image url="@../images/montagna.png" />
               </image>
               <BorderPane.margin>
                  <Insets right="10.0" top="5.0" />
               </BorderPane.margin>
            </ImageView>
         </right>
         <center>
            <ImageView fitHeight="210.0" fitWidth="334.0" pickOnBounds="true" preserveRatio="true" BorderPane.alignment="CENTER">
               <image>
                  <Image url="@../images/Logo.png" />
               </image>
               <BorderPane.margin>
                  <Insets top="5.0" />
               </BorderPane.margin>
            </ImageView>
         </center>
      </BorderPane>
      <HBox prefWidth="790.0">
         <children>

            <Button contentDisplay="CENTER" mnemonicParsing="false" style="-fx-background-color: FBC9A8; -fx-border-color: F69155;" text="Home">
               <font>
                  <Font name="Maiandra GD" size="24.0" />
               </font>
               <opaqueInsets>
                  <Insets top="1.0" />
               </opaqueInsets>
            </Button>
            <Button fx:id="btnSearch" contentDisplay="CENTER" minHeight="45.0" minWidth="160.0" mnemonicParsing="false" onAction="#buttonHandler" style="-fx-background-color: FBC9A8; -fx-border-color: F69155;" text="Search path" wrapText="true">
               <font>
                  <Font name="Maiandra GD" size="24.0" />
               </font>
            </Button>
            <Button fx:id="btnAddPath" contentDisplay="CENTER" mnemonicParsing="false" onAction="#buttonHandler" style="-fx-background-color: FBC9A8; -fx-border-color: F69155;" text="Add new path">
               <font>
                  <Font name="Maiandra GD" size="24.0" />
               </font>
            </Button>
         </children>
      </HBox>
      <AnchorPane VBox.vgrow="ALWAYS">
         <children>
            <BorderPane fx:id="mainChild" minHeight="600.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0" />
         </children>
      </AnchorPane>
   </children>
